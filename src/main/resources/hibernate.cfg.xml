<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC

		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"

		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- JDBC connection settings -->

		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>

		<property name="connection.url">jdbc:mysql://34.93.77.10:3306/OES_Project</property>

		<property name="connection.username">admin</property>

		<property name="connection.password">Mindbridges@2025</property>

		<!-- Hibernate settings -->

		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

		<property name="hbm2ddl.auto">update</property>

		<property name="show_sql">false</property>

		<property name="format_sql">true</property>

		<!-- c3p0 Connection Pooling Settings -->

		<property name="hibernate.c3p0.min_size">50</property>

		<property name="hibernate.c3p0.max_size">1000</property>

		<property name="hibernate.c3p0.timeout">60</property> <!-- close idle connections after 60s -->

		<property name="hibernate.c3p0.idle_test_period">60</property> <!-- test idle connections every 60s -->

		<property name="hibernate.c3p0.max_statements">200</property>

		<property name="hibernate.c3p0.acquire_increment">10</property>

		<property name="hibernate.c3p0.acquireRetryAttempts">5</property>

		<property name="hibernate.c3p0.breakAfterAcquireFailure">false</property>

		<!-- Entity Mappings -->

		<mapping class="com.entity.User"/>

		<mapping class="com.entity.Batch"/>

		<mapping class="com.entity.Student"/>

		<mapping class="com.entity.Exam"/>

		<mapping class="com.entity.Question"/>

		<mapping class="com.entity.Enroll"/>

		<mapping class="com.entity.Answer"/>

		<mapping class="com.entity.Result"/>

		<mapping class="com.entity.Notice"/>

	</session-factory>

</hibernate-configuration>